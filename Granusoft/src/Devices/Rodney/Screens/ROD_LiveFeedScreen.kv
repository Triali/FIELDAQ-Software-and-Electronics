<ROD_LiveFeedInfoBox@Label>:
    font_size: 25
    color: 1,1,1,1
	halign: 'center'
	valign: 'center'
	markup: True
    bold: True
    canvas.before:
        Color:
            rgba: .14,.14,.14,1
        Rectangle:
            pos: self.pos
            size: self.size

<ROD_LiveFeedScreen>:
	name: 'rod_live_feed_screen'
    GranuContainer:
        GranuSideArea:
            GranuNone:
            GranuSideButton:
                id: adc_button_text
                on_release:
                    root.adc_button_press()
            GranuSideButton:
                text: root.transition_to_state
	    		on_release:
                    root.transition()
            GranuSideButton:
                text: 'Back'
	    		on_release:
                    root.manager.transition.direction = 'right'
                    root.move_to('rod_main_screen') # Move to main screen
        GranuContent:
            GranuTitle:
                text: 'Live Feed'
            GridLayout:
                cols: 3
                spacing: 10
                ROD_LiveFeedInfoBox:
                    id: current_date
                    text: root.current_date_label +':\n'+ root.current_date
                ROD_LiveFeedInfoBox:
                    id: time
                    text: root.time_label + ':\n' + root.time
                ROD_LiveFeedInfoBox:
                    id: cpu_time
                    text: root.data_rate_label + ':\n' + root.data_rate + " Hz"
                ROD_LiveFeedInfoBox:
                    id: strainAx
                    text: root.strainAx_label + ':\n' + root.strainAx + root.xUnits
                ROD_LiveFeedInfoBox:
                    id: strainAy
                    text: root.strainAy_label + ':\n' + root.strainAy
                ROD_LiveFeedInfoBox:
                    id: strainBx
                    text: root.strainBx_label + ':\n' + root.strainBx + root.xUnits
                ROD_LiveFeedInfoBox:
                    id: strainAy
                    text: root.strainBy_label + ':\n' + root.strainBy
                ROD_LiveFeedInfoBox:
                    id: whisker_front_angle
                    text: root.whisker_front_angle_label + ':\n' + root.whisker_front_angle + root.potUnits
                ROD_LiveFeedInfoBox:
                    id: whisker_back_angle
                    text: root.whisker_back_angle_label + ':\n' + root.whisker_back_angle + root.imuUnits
       
                