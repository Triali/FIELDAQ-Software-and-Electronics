<ImageReviewScreen>:
    name: 'img_review_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Delete'
                on_release:
                    root.delete_button()
                    root.move_to('img_viewer_screen')
            GranuNone:
            GranuNone:
            GranuSideButton:
                text: 'Back'
                on_release:
                    root.move_to('img_viewer_screen') # Move to images view screen
        GranuContent:
            GranuTitle:
                text: 'Image Review Screen'
            Label:
                id: device_name
                font_size: 40
                markup: True
            	bold: True
                text: 'PUT THE BIG,\nFAT IMAGE RIGHT SMACK\nDAB IN THE CENTER\nHERE'
                halign: 'center'
