<ImageReviewScreen>:
    name: 'img_review_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Take\nAnother'
	    		on_release:
                    root.move_to('cam_feed_screen')
            GranuNone:
            GranuNone:
            GranuSideButton:
                text: 'Save'
                on_release:
                    root.move_to('cam_main_screen') # Move to main screen
        GranuContent:
            GranuTitle:
                text: 'Image Review Screen'
            Label:
                id: device_name
                font_size: 40
                markup: True
            	bold: True
                text: 'PUT THE BIG,\nFAT IMAGE RIGHT SMACK\nDAB IN THE CENTER\nHERE'
                halign: 'center'
            Label:
                id: warning_text
                color: (0.8, 0, 0, 1)
                size_hint_max_y: 15
                font_size: 15
            	markup: True
            	bold: True
