<CameraFeedScreen>:
    name: 'cam_feed_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Take\nPhoto'
	    		on_release:
                    root.move_to('img_review_screen') # Move to settings screen
            GranuNone:
            GranuNone:
            GranuSideButton:
                text: 'Back'
                on_release:
                    root.move_to('cam_main_screen') # Move to exit screen
        GranuContent:
            GranuTitle:
                text: 'Camera Feed Screen'
            Label:
                id: device_name
                font_size: 40
                markup: True
            	bold: True
                text: 'Stalk Strength\nDevice 2.1.0'
                halign: 'center'
            Label:
                id: warning_text
                color: (0.8, 0, 0, 1)
                size_hint_max_y: 15
                font_size: 15
            	markup: True
            	bold: True
